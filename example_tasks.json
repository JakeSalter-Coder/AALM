{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gfbuild",
            "command": "gfortran",
            "args": [
                "code/*.f90",
                "-o", "build/main",
                "-g3",
                "-O0",
                "-fbacktrace",
                "-fcheck=all",
                "-ffpe-trap=zero,overflow,underflow",
                "-Wall",
                "-Wextra",
                "-Warray-temporaries",
                "-Wconversion",
                "-ffree-line-length-0"
            ]
        }
    ]
}