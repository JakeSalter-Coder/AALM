{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Fortran (gdb)",
        "type": "cppdbg",
        "request": "launch",
        "preLaunchTask": "gfbuild",
        "program": "${workspaceFolder}/build/main",
        "cwd":     "${workspaceFolder}",
        "args": ["Examples/LeggettInput_Ex1.txt"],
        "environment": [],
        "stopAtEntry": false,
        "externalConsole": false,
        "MIMode": "cdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
}