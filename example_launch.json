    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Fortran (gdb)",
        "type": "cppdbg",
        "request": "launch",
        "preLaunchTask": "gfbuild",
        "program": "${workspaceFolder}/build/main Examples/Examples/LeggettInput_Ex1.txt",
        "cwd":     "${workspaceFolder}",
        "args": [],
        "environment": [],
        "stopAtEntry": false,
        "externalConsole": false,
        "MIMode": "lldb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
}